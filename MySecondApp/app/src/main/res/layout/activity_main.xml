<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">

    <!-- PHRASES -->
    <TextView
        android:id="@+id/textView"
        style="@style/TextView_PhraseStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_phrase1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        style="@style/TextView_PhraseStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_phrase2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView5"
        style="@style/TextView_PhraseStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_phrase3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView7"
        style="@style/TextView_PhraseStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_phrase4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        style="@style/TextView_PhraseStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_phrase5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <!-- AUTHORS -->
    <TextView
        android:id="@+id/textView10"
        style="@style/TextView_AuthorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_author5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView6"
        style="@style/TextView_AuthorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_author3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView2"
        style="@style/TextView_AuthorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_author1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView4"
        style="@style/TextView_AuthorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_author2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        style="@style/TextView_AuthorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textview_author4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <!-- WATERMARK -->
    <TextView
        android:id="@+id/textView11"
        style="@style/TextView_WatermarkStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>